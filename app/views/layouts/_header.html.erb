<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Blog App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to "New post", new_post_path %></li>
          <li><%= link_to "All posts", user_posts_path(current_user) %></li>
          <li><%= button_to "logout", destroy_user_session_path, method: :delete, class: "logout"%></li>
        <%else %>
          <li><%= link_to  "Log in", user_session_path %></li>
        <%end%>
      </ul>
    </nav>
  </div>
</header>
