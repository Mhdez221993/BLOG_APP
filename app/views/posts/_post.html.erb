<li class="user_posts">
  <div class="post_show_title">
    <h2><%= post.title %> by <%= post.user.name %></h2>
    <h3>
      comments: <%= post.comments_counter == nil ? 0 : post.comments_counter %>,
      Likes: <%= post.likes_counter == nil ? 0 : post.likes_counter %>
    </h3>
  </div>
  <br>
  <p><%= post.text %></p>
</li>
