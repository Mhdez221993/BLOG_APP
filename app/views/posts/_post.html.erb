<li class="user_posts">
  <div class="post_show_title">
    <h2><%= post.title %> by <%= post.user.name %></h2>
    <h3>
      comments: <%= post.comments_counter || 0 %>,
      <a> <%= post.like(post.user) %> Likes</a>: <%= post.likes_counter || 0 %>
    </h3>
  </div>
  <br>
  <p><%= post.text %></p>
</li>
